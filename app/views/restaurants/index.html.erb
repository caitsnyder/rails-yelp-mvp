<h1>Our restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= restaurant.name %>
      <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
    </li>
  <% end %>
</ul>
<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary"%>

